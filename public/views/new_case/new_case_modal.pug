#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h4#myModalLabel.modal-title New Use Case
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') Ã—
            .modal-body
                .container
                    .form-group
                        label Name
                        input.form-control(type='text', data-bind='value: form.name')
                    .form-group
                        label Description
                        textarea.form-control(data-bind='textInput: form.description') Short description
                    .row
                        .col-4
                            label Version:
                            select.custom-select(data-bind='value: form.version')
                                option(selected='') 1
                                option 2
                        .col-8
                            .input-group
                                label Actors:
                                select.custom-select
                                    option(selected='') System
                                span.input-group-btn
                                    button.btn.btn-primary Add
                    .form-group
                        label Goal:
                        input.form-control(type='text')
                    .card
                        .card-header Basic Course Steps
                        .card-block(data-bind='foreach: form.course')
                            .input-group
                                span.input-group-addon(data-bind='text: index')
                                input.form-control(type='text', data-bind='value: text')
                                span.input-group-btn
                                    button.btn.btn-success(title='New Step', type='button', data-bind='click: $parent.addStep')
                                        i.fa.fa-plus(aria-hidden='true')
                                span.input-group-btn
                                    button.btn.btn-success(title='Remove Step', type='button', data-bind='click: $parent.removeStep')
                                        i.fa.fa-remove(aria-hidden='true')
                    .card
                        .card-header
                            | Extensions:
                        .card-block(data-bind='foreach: form.extensions')
                            .input-group
                                select.custom-select(data-bind="options: $root.form.course, optionsText: 'index', value: courseStep")
                                span.input-group-addon a.
                                input.form-control(type='text')
                                span.input-group-btn
                                    button.btn.btn-success(title='New Step', type='button', data-bind='click: $parent.addExtensionStep')
                                        i.fa.fa-plus(aria-hidden='true')
                                span.input-group-btn
                                    button.btn.btn-success(title='Remove Step', type='button', data-bind='click: $parent.removeExtensionStep')
                                        i.fa.fa-remove(aria-hidden='true')
                                span.input-group-btn
                                    button.btn.btn-primary(title='Add extension', type='button', data-bind='click: $parent.addExtension')
                                        i.fa.fa-plus-square-o(aria-hidden='true')
                    .form-group
                        label
                            | Pre-conditions:
                        input.form-control(type='text')
                    .form-group
                        label
                            | Pos-conditions:
                        input.form-control(type='text')
                    .form-group
                        label
                            | Comments:
                        input.form-control(type='text')
            .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Close
                button.btn.btn-primary(type='button', data-bind='click: submitNewUseCase') Save changes

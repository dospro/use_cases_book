extends layout

block content
    div.container#app
        div.row
            div.col-12(id="accordion", v-for="item in items")
                div.card
                    div.card-header
                        h5.mb-0
                            a(data-toggle="collapse", data-parent="#accordion", v-bind:href="item.hReference", aria-expanded="false")
                                span {{ item.name }}

                    div.collapse(:id="item.reference")
                        div.card-block
                            span {{item.description}}

        div.row
            div.col-4
                a.btn.btn-primary(href="new") Nuevo Caso de Uso

block scripts
    script(src="js/app.bundle.js", type="text/javascript")